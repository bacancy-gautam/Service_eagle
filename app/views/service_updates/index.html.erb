<% if user_signed_in? %>
  <div class="container">
    <table class='table'>
      <thead>
        <tr>
          <th scope='col'>booking id</th>
          <th scope='col'>status</th>
          <th scope='col'>description</th>
          <th scope='col'>estimation</th>
        </tr>
      </thead>
      <tbody>
        <% @updates.each do |update| %>
          <tr>
            <td scope='row'><%= update.token %></td>
            <td scope='row'><%= update.status %></td>
            <td scope='row'><%= update.description %></td>
            <td scope='row'><%= update.estimation %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h3>Please login!!!!!!!!</h3>
    <h3>If you are new user then sign up</h3>
    <%= link_to "sign in", new_user_registration_path %>
    <%= link_to "sign in", new_user_session_path %>
  </div>
<% end %>
