<% if user_signed_in? %>
  <div class="container">
    <%= form_tag service_updates_path, :method => "get" do %>
      <div class="form-group">
        <%= label_tag(:booking_id, "enter booking id") %><br/>
        <%= text_field_tag :booking_id %>
        <%= submit_tag "search", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= link_to "add update", new_service_update_path %>
    <table class='table'>
      <thead>
        <tr>
          <th scope='col'>booking id</th>
          <th scope='col'>status</th>
          <th scope='col'>description</th>
          <th scope='col'>estimation</th>
          <th scope='col'>date</th>
        </tr>
      </thead>
      <tbody>
        <% @updates.each do |update| %>
          <tr>
            <td scope='row'><%= update.token %></td>
            <td scope='row'><%= update.service_status %></td>
            <td scope='row'><%= update.description %></td>
            <td scope='row'><%= update.estimation %></td>
            <td scope='row'><%= update.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h3>Please login!!!!!!!!</h3>
    <h3>If you are new user then sign up</h3>
    <%= link_to "sign in", new_user_registration_path %>
    <%= link_to "sign in", new_user_session_path %>
  </div>
<% end %>
